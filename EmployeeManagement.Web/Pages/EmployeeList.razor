@page "/"
@inherits EmployeeListBase
<h3>Selected emplyees list Count - @SelectedEmployeesCount</h3>
        <input type="checkbox" id="showFooter" @bind="ShowFooter"/> 
        <label for="showFooter"/> @(ShowFooter ? "Hide Footer" : "Show Footer")
@if(Employees ==null)
{
  <div class="text-center">
  <div class="spinner-border" role="status">
    <span class="sr-only">Loading...</span>
  </div>
</div>
}else{
    <div class="card-deck">
    @foreach(var item in Employees)
    {
        <Card Employee="@item" OnEmployeeSelection="EmployeeSelectionChange" OnEmployeeDeletion="EmployeeDeleted" ShowFooter="ShowFooter" />
    }
</div>
}